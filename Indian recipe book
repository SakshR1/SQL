CREATE TABLE IndianRecipes (
    RecipeID INT PRIMARY KEY AUTO_INCREMENT,
    RecipeName VARCHAR(100) NOT NULL,
    Ingredients TEXT NOT NULL,
    Instructions TEXT NOT NULL,
    CookingTime INT,
    Servings INT,
    Cuisine VARCHAR(50) DEFAULT 'Indian'
);

